@model electronics_shop.Models.Account

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section styles{
    <style>
        /*======= VALIDATOR =========*/
        .gap-4 {
            gap: 1.7rem;
        }

        .form-group.invalid .form-control {
            border-color: #f33a58;
        }

        .form-group.invalid .form-message {
            color: #f33a58;
        }

        .form-message {
            word-break: break-all;
            font-size: 0.7rem;
            line-height: 1.5rem;
            padding: 4px 0 0;
            display: block;
            word-break: normal;
            position: absolute;
            top: 37px;
            left: 7px
        }

        /*==========================*/
    </style>
}


@if (TempData["msgFailed"] != null)
{
    <div class="bg-red-500 text-white px-4 py-2 rounded-md border border-red-600 flex items-center">
        <span class="mr-2">×</span>
        <span>@TempData["msgFailed"]</span>
    </div>
}

<div class="sign-up-section container mx-auto my-5 px-2 sm:px-8">
    <div class="mx-auto max-w-[500px] rounded-lg bg-white p-5">
        <div class="my-5">
            <img class="mx-auto" src="~/Content/images/svg/logo.svg" alt="Besnik." />
        </div>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "form-1", @class = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="flex flex-col gap-4 form-1">

        <div class="NameI" style="display:flex; justify-content: space-between; gap: 5px;">
            <div class="relative flex h-[40px] items-center form-group">
                <i class="bi bi-person absolute ml-2 flex text-[24px] text-gray-400"></i>
                <input class="input pl-10 form-control" id="firstname" name="firstname" type="text" placeholder="First Name" required />
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                <span class="form-message"></span>
            </div>
            <div class="relative flex h-[40px] items-center form-group">
                <i class="bi bi-person absolute ml-2 flex text-[24px] text-gray-400"></i>
                <input class="input pl-10 form-control" id="lastname" name="lastname" type="text" placeholder="Last Name" required />
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                <span class="form-message"></span>
            </div>
        </div>
        <div class="relative flex h-[40px] items-center form-group">
            <i class="bi bi-phone absolute ml-2 flex text-[24px] text-gray-400"></i>
            <input class="input pl-10 form-control" id="phone" name="phonenumber" type="text" placeholder="Phone number" required />
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            <span class="form-message"></span>
        </div>

        <div class="relative flex h-[40px] items-center form-group">
            <i class="bi bi-envelope absolute ml-2 flex text-[24px] text-gray-400"></i>
            <input class="input pl-10 form-control" id="email" name="email" type="text" placeholder="Email" required />
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <span class="form-message"></span>
        </div>

        <div class="relative flex h-[40px] items-center form-group">
            <i class="bi bi-lock absolute ml-2 flex text-[24px] text-gray-400"></i>
            <input class="input pl-10 form-control" id="password" name="password" type="password" placeholder="Password" required />
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            <span class="form-message"></span>
        </div>

        <div class="relative flex h-[40px] items-center form-group">
            <i class="bi bi-lock-fill absolute ml-2 flex text-[24px] text-gray-400"></i>
            <input class="input pl-10 form-control" id="password-confirmation" name="confirmpassword" type="password"
                   placeholder="Confirm Password" required />
            <span class="form-message"></span>
        </div>
        <div class="my-2 flex items-center justify-between">
            <label class="flex select-none items-center gap-2">
                <input class="checkbox" type="checkbox" />
                <span class="text-gray-title">
                    I agree with all
                    <a class="underlined-animated text-[#3091ff] after:bottom-0" href="#">Terms of Use</a>
                    &
                    <a class="underlined-animated text-[#3091ff] after:bottom-0" href="#">Privacy Policy</a>.
                </span>
            </label>
        </div>
        <button class="btn-effect transition-all-300 h-full w-full rounded-lg bg-primary-color p-2" type="submit">
            <span class="font-bold uppercase text-white">Sign Up</span>
        </button>
    </div>
            
        }
        <span class="or text-gray-title flex h-[50px] items-center py-2">
            <span class="mx-2 text-sm uppercase">Or</span>
        </span>
        <div class="flex flex-col flex-wrap justify-center gap-5 sm:flex-row">
            <button class="transition-all-300 flex h-[35px] min-w-[100px] items-center justify-center rounded-lg bg-google hover:scale-110">
                <i class="bi bi-google flex text-3xl text-white"></i>
            </button>
        </div>
        <div class="mt-5 flex flex-col items-center justify-center border-t border-t-gray-400 pt-5">
            <p style="font-weight: 500;">Already have an account <a href="@Url.Action("Login", "Account")" style="color: #211d70; font-weight: 600">Login</a></p>
            @*<a class="btn-effect rounded-lg bg-primary-color p-2 text-white" href="@Url.Action("Login", "Account")">
                <span>Login</span>
            </a>*@
        </div>
    </div>
</div>


