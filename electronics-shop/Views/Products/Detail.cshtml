                                    <div class="relative h-5 w-full overflow-hidden rounded bg-primary-rgba">
                                        <div class="absolute left-0 top-0 h-full w-[20%] rounded bg-primary-color" style="width: @ViewBag.Rate2%"></div>
                                    </div>
                                </div>
                                <div class="my-2 flex items-center gap-2">
                                    <span>1</span>
                                    <div class="relative h-5 w-full overflow-hidden rounded bg-primary-rgba">
                                        <div class="absolute left-0 top-0 h-full w-[10%] rounded bg-primary-color" style="width: @ViewBag.Rate1%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
