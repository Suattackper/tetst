                                    <div class="relative h-5 w-full overflow-hidden rounded bg-primary-rgba">
                                        <div class="absolute left-0 top-0 h-full w-[40%] rounded bg-primary-color" style="width: @ViewBag.Rate4%"></div>
                                    </div>
                                </div>
                                <div class="my-2 flex items-center gap-2">
                                    <span>3</span>
                                    <div class="relative h-5 w-full overflow-hidden rounded bg-primary-rgba">
