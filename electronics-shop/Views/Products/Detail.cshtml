                                        <input type="number" name="ratingvalue" value="" hidden>
                                        <i class='bi bi-star star' data-value="1" style="--i: 0;"></i>
                                        <i class='bi bi-star star' data-value="2" style="--i: 1;"></i>
                                        <i class='bi bi-star star' data-value="3" style="--i: 2;"></i>
                                        <i class='bi bi-star star' data-value="4" style="--i: 3;"></i>
                                        <i class='bi bi-star star' data-value="5" style="--i: 4;"></i>
                                    </div>
                                </div>
                                <div class="h-20">
                                    <textarea name="reviewvalue" class="input resize-none" placeholder="Add a review..." required></textarea>
                                </div>
                                @if (Session["info"] != null)
                                {
                                    Account account = (Account)Session["info"];
                                    <input class="input" name="accountcode" type="hidden" value="@account.AccountCode" />
                                }
