                                <img class="h-full w-full object-cover" src="~/Content/images/comments/profile_1.png" alt="profile_logo" />
                            </div>
                            <form id="contactForm" class="form-review flex w-full flex-col gap-2" action="@Url.Action("Review","Products")" method="post">
