@*@model electronics_shop.Models.ProductDetail*@
@model electronics_shop.Models.Product
@using electronics_shop.Models
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/Content/libraries/nice-select2/nice-select2.css" />
    <link rel="stylesheet" href="~/Content/libraries/rater-js/rater-js.css" />
}


<div class="breadcrumb-section container mx-auto my-5 px-2 sm:px-8">
    <ul class="flex flex-wrap items-center gap-1">
        <li class="transition-all-300 hover:text-primary-color">
            <a href="@Url.Action("Index","Home")">Home</a>
        </li>
        <li>
            <i class="bi bi-caret-right-fill flex text-primary-color"></i>
        </li>
        <li class="transition-all-300 active hover:text-primary-color">
            <a href="@Url.Action("Detail","Products")">Product Details</a>
        </li>
    </ul>
</div>

<div class="product-details container mx-auto my-5 px-2 sm:px-8">
    <div class="grid grid-cols-12 gap-5 rounded-lg bg-white p-2 xs:p-8">
        <div class="col-span-12 max-h-[500px] md:col-span-6">
            <div class="swiper swiper-top group relative flex items-center rounded-lg">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="swiper-zoom-container">
                            <img src="@ViewBag.Product.ImageProduct" alt="product" />
                        </div>
                    </div>
                    @if (ViewBag.productImgsList.Count > 0)
                    {
                        foreach (var item in ViewBag.productImgsList)
                        {
                            <div class="swiper-slide">
                                <div class="swiper-zoom-container">
                                    <img src="@item.Img" alt="product" />
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="button-next btn-slider-1 transition-all-300 -right-16 group-hover:right-4">
                    &#10095;
                </div>
                <div class="button-prev btn-slider-1 transition-all-300 -left-16 group-hover:left-4">
                    &#10094;
                </div>
            </div>
            <div class="swiper swiper-thumbs">
                <div class="swiper-wrapper">
                    <div class="swiper-slide cursor-pointer rounded-lg">
                        <img src="@ViewBag.Product.ImageProduct" alt="product" />
                    </div>
                    @if (ViewBag.productImgsList.Count > 0)
                    {
                        foreach (var item in ViewBag.productImgsList)
                        {
                            <div class="swiper-slide cursor-pointer rounded-lg">
                                <img src="@item.Img" alt="product" />
                            </div>
                        }
                    }
                </div>
                <div class="button-next btn-slider-1 transition-all-300 -right-16 group-hover:right-4">
                    &#10095;
                </div>
                <div class="button-prev btn-slider-1 transition-all-300 -left-16 group-hover:left-4">
                    &#10094;
                </div>
            </div>
        </div>
        <div class="col-span-12 md:col-span-6">
            <div class="my-1">
                <a class="clamp-2 transition-all-300 break-all text-2xl font-medium hover:text-primary-color" href="#">
                    @ViewBag.Product.ProductName
                </a>
            </div>
            <div class="product-val-stock my-2 flex justify-between">
                <div class="flex">
                    @if (@ViewBag.Product.Rate == 0)
                    {
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                    }
                    else if (@ViewBag.Product.Rate > 0 && @ViewBag.Product.Rate <= 1)
                    {
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                    }
                    else if (@ViewBag.Product.Rate > 1 && @ViewBag.Product.Rate <= 2)
                    {
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                    }
                    else if (@ViewBag.Product.Rate > 2 && @ViewBag.Product.Rate <= 3)
                    {
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                    }
                    else if (@ViewBag.Product.Rate > 3 && @ViewBag.Product.Rate <= 4)
                    {
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                    }
                    else
                    {
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                        <i class="bi bi-star-fill flex text-base text-star"></i>
                    }
                </div>
                <div class="ml-auto">
                    @if (ViewBag.Product.Quantity > 0)
                    {
                        <span class="rounded-md bg-green-300 px-2 py-1 text-xs font-bold uppercase text-white">instock</span>
                    }
                    else
                    {
                        <span class="rounded-md bg-green-300 px-2 py-1 text-xs font-bold uppercase text-white" style="background-color:red">saleout</span>
                    }
                </div>
            </div>
            <div class="my-5 flex items-center gap-5">
                @if (ViewBag.Promotion != null)
                {
                    <div class="flex rounded-lg bg-white px-3 py-2 text-primary-color shadow">
                        <span class="text-2xl font-semibold leading-7">@string.Format("₫{0:#,0}", ViewBag.Product.Price - ViewBag.Product.Price * @ViewBag.Promotion.PromotionPercentage / 100)</span>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-md font-semibold uppercase text-green-400">
                            @ViewBag.Promotion.PromotionPercentage% Off
                        </span>
                        <span class="prev-price text-sm text-primary-color line-through">@string.Format("₫{0:#,0}", ViewBag.Product.Price)</span>
                    </div>
                }
                else
                {
                    <div class="flex rounded-lg bg-white px-3 py-2 text-primary-color shadow">
                        <span class="text-2xl font-semibold leading-7">@string.Format("₫{0:#,0}", ViewBag.Product.Price)</span>
                    </div>
                }
            </div>

            <div class="my-4">
                <p class="clamp-5 break-all font-bold uppercase">
                    <br /><br />Số lượng: @ViewBag.Product.Quantity<br />
                </p>
            </div>

            <div class="flex gap-1">
                <form action="javascript:void(0)">
                    <div class="block">
                    </div>
                    <div class="flex flex-wrap justify-start gap-5">
                        <div class="quantity inline-flex rounded-lg bg-white shadow">
                            <input class="quantity-value input-number w-12 border-none bg-transparent p-1 text-center text-lg text-gray-400 focus:border-none focus:ring-0"
                                   type="number" value="0" />
                            <div class="flex w-5 flex-col justify-between">
                                <button class="quantity-btn increment text-primary-color" type="button">
                                    <i class="bi bi-caret-up-fill"></i>
                                </button>
                                <button class="quantity-btn decrement text-primary-color" type="button">
                                    <i class="bi bi-caret-down-fill"></i>
                                </button>
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <button class="btn-effect transition-all-300 flex h-full w-full items-center justify-center gap-2 rounded-lg bg-primary-color p-2"
                                    type="submit">
                                <i class="bi bi-cart-fill flex text-xl text-white"></i>
                                <span class="font-bold uppercase text-white">Add to cart</span>
                            </button>
                            <a class="tippy tippy-wishlist btn-wishlist transition-all-300 flex min-h-[40px] min-w-[40px] cursor-pointer items-center justify-center gap-2 rounded-lg bg-primary-color p-2 hover:bg-primary-hover"
                               href="javascript:void(0)">
                                <i class="bi bi-heart pointer-events-none flex text-white"></i>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="my-5 flex flex-col gap-2">
                <a class="btn-open-modal transition-all-300 rounded-lg border bg-slate-100 p-2 hover:bg-slate-200"
                   href="javascript:void(0)" data-target=".calculate-shipping-modal">
                    <div class="pointer-events-none flex items-center justify-between gap-2">
                        <div class="flex items-center gap-2">
                            <i class="bi bi-truck flex text-2xl text-primary-color"></i>
                            <span>Calculate Shipping Cost</span>
                        </div>
                        <i class="bi bi-arrow-right-short flex text-2xl text-primary-color"></i>
                    </div>
                </a>
            </div>
            <div class="mt-5 border-t border-gray-200 pt-5">
                <div>
                    <b>Categories: </b>
                    <span>
                        <a href="@Url.Action(ViewBag.Category.CategoryName,"Products")" class="text-zinc-500">@ViewBag.Category.CategoryName</a>
                    </span>
                </div>
                <div class="flex gap-2">
                    <b>Share:</b>
                    <div class="flex items-center gap-[10px]">
                        <a href="#">
                            <i class="bi bi-facebook transition-all-300 flex text-zinc-500 hover:text-primary-color"></i>
                        </a>
                        <a href="#">
                            <i class="bi bi-twitter transition-all-300 flex text-zinc-500 hover:text-primary-color"></i>
                        </a>
                        <a href="#">
                            <i class="bi bi-whatsapp transition-all-300 flex text-zinc-500 hover:text-primary-color"></i>
                        </a>
                        <a href="#">
                            <i class="bi bi-link-45deg transition-all-300 flex text-zinc-500 hover:text-primary-color"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-span-12">
            <div class="liner-container mb-5 flex border-b-2 border-[rgba(119,119,119,.17)]">
                <h1 class="mb-[-2px] inline-block border-b-2 border-primary-color pb-3 text-xl font-bold uppercase">
                    Specifications
                </h1>
            </div>
            <div class="grid grid-cols-3 gap-5">
                <div class="col-span-12 sm:col-span-1">
                    <span><b>Aplication:</b> Desktop</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b># of CPU cores:</b> 3.8GHz</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>Total L3 cache:</b> 32MB</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b># of threads:</b> 12</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>Total L1 cache:</b> 384KB</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>TDP/Default TDP:</b> 95W</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>CPU Socket:</b> AM4</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>Temp. max:</b> 95°C</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>Product line:</b> AMD Ryzen™ 5 Desktop Processors</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>Max Magnification Clock:</b> Up to 4.4GHz</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>Total L2 cache:</b> 3MB</span>
                </div>
                <div class="col-span-12 sm:col-span-1">
                    <span><b>Gamer:</b> Yes</span>
                </div>
            </div>
        </div>
        <div class="col-span-12">
            <div class="liner-container mb-5 flex border-b-2 border-[rgba(119,119,119,.17)]">
                <h1 class="mb-[-2px] inline-block border-b-2 border-primary-color pb-3 text-xl font-bold uppercase">
                    Description
                </h1>
            </div>
            <div class="see-more relative pb-5">
                <div class="see-more-container gradient-bottom max-h-[220px] overflow-hidden">
                    <div class="see-more-content">
                        <p>
                            @ViewBag.Product.Description
                        </p>
                    </div>
                </div>
                <button class="btn-see-more absolute bottom-0 z-10 flex w-full justify-center hover:text-primary-color">
                    <i class="bi bi-chevron-compact-down text-stroke-medium transition-all-300 flex text-xl"></i>
                </button>
            </div>
        </div>
        <div class="col-span-12">
            <div class="tabs-container">
                <ul class="flex justify-between">
                    <li class="btn-tabs tab-active-1 transition-all-300 w-full cursor-pointer bg-gray-200 p-2 text-center text-gray-400 font-bold">
                        Reviews
                    </li>
                </ul>
                <div class="tabs-content mt-5">
                    <div class="tab-content invisible absolute w-full bg-white opacity-0">
                        <div class="my-5 flex flex-col items-center justify-center gap-5 sm:flex-row">
                            <div class="flex flex-col items-center gap-2">
                                <span class="text-5xl">@ViewBag.Product.Rate.ToString("F1")</span>
                                <div class="flex">
                                    @if (@ViewBag.Product.Rate == 0)
                                    {
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                    }
                                    else if (@ViewBag.Product.Rate > 0 && @ViewBag.Product.Rate <= 1)
                                    {
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                    }
                                    else if (@ViewBag.Product.Rate > 1 && @ViewBag.Product.Rate <= 2)
                                    {
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                    }
                                    else if (@ViewBag.Product.Rate > 2 && @ViewBag.Product.Rate <= 3)
                                    {
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
                                    }
                                    else if (@ViewBag.Product.Rate > 3 && @ViewBag.Product.Rate <= 4)
                                    {
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-gray-200"></i>
