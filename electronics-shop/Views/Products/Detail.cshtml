                                    {
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                        <i class="bi bi-star-fill flex text-base text-star"></i>
                                    }
                                </div>
                                <span class="flex items-center gap-1"><i class="bi bi-chat-quote flex"></i> @ViewBag.Comment.Count Reviews</span>
                            </div>
                            <div class="w-full max-w-[600px]">
                                <div class="my-2 flex items-center gap-2">
                                    <span>5</span>
                                    <div class="relative h-5 w-full overflow-hidden rounded bg-primary-rgba">
                                        <div class="absolute left-0 top-0 h-full w-[50%] rounded bg-primary-color" style="width: @ViewBag.Rate5%"></div>
                                    </div>
