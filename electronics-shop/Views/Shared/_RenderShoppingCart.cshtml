@model IEnumerable<electronics_shop.Models.ShoppingCartItem>











        <div id="partialViewContainer" class="h-full overflow-auto">
            @*If the shopping cart is empty (replace hidden with flex)*@
            <div class="hidden flex-col items-center justify-center gap-4 p-5">
                <i class="bi bi-cart-x text-8xl text-gray-200"></i>
                <p class="font-semibold">There are no products in the cart.</p>
                <a class="btn-effect transition-all-300 flex items-center justify-center gap-2 rounded-lg bg-primary-color p-2"
                   href="#">
                    <span class="font-bold uppercase text-white">Go to the store</span>
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <a id="trow_@item.ProductId" class="transition-all-300 flex h-[100px] w-full items-center justify-between gap-5 bg-white p-2 hover:bg-gray-100"
                       href="#">
                        <div class="h-[80px] w-[80px] min-w-[80px] overflow-hidden rounded-lg border">
                            <img class="h-full w-full object-cover" src="@item.ProductImg" alt="product" />
                        </div>
                        <div class="flex w-full flex-col">
                            <h6 class="clamp-2 break-all text-lg font-semibold">
                                @item.ProductName 
                            </h6>
                            <div class="flex gap-2">
                                <div class="flex gap-1 leading-7 text-gray-400">
                                    <span>@item.Quantity</span>

                                </div>
                                <div class="flex items-center gap-2">
                                    <span class="font-bold text-primary-color">@string.Format("₫{0:#,0}", item.Price)</span>
                                    <small class="text-xs text-primary-color line-through">@string.Format("₫{0:#,0}", item.PromotionPrice)</small>
                                </div>
                            </div>
                        </div>
                        <div data-id="@item.ProductId" class=" btn_Delete transition-all-300 flex text-slate-400 hover:text-primary-color">
                            <i class="bi bi-trash-fill pointer-events-none text-2xl"></i>
                        </div>
                    </a>
                }
            }
            else
            {
                <h3 class="text-center">Giỏ hàng rỗng</h3>
            }

        </div>
     


   



